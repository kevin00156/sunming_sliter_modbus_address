TYPE structOrderControl :
STRUCT
	xOrderExecute: 	BIT	;//訂單定位執行
	xDownKnifeAndCrimper:	Bit	;//下壓刀線
	xUpKnifeAndCrimper:	Bit	;//抬起刀線
	xMachineMode:	BIT	; //機台模式選擇, 0: 單機, 1: 雙機
	xChangeOrder	:	BIT	;//電腦命令換單
	xSameOrderFlag	:	BIT	;//相同訂單旗標
	xHomeExecute	:	Bit	;//執行回Home命令
	xHasNextOrder	:	Bit	;//PC端有下一筆訂單
	xDownKnifeAndCrimperAfterExecution	:	Bit	;//排單完成後自動下刀
	xBit9	:	Bit	;
	xBit10	:	Bit	;
	xBit11	:	Bit	;
	xBit12	:	Bit	;
	xBit13	:	Bit	;
	xBit14	:	Bit	;
	xBit15	:	Bit	;
	
	wUsedKnife : WORD; //使用刀狀況
	wUsedFrontCrimper : WORD; //使用前壓線狀況
	wUsedBackCrimper : WORD; //使用後壓線狀況
END_STRUCT
END_TYPE
