	NUM_OF_KNIFE_AXIS 						: UINT:=7;
	NUM_OF_CRIMPING_AXIS 					: UINT:=NUM_OF_KNIFE_AXIS-1;
	NUM_OF_SUCTION_AXIS 					: UINT:=2;
	NUM_OF_OFFSET_LR_AXIS 					: UINT:=1;
	NUM_OF_OFFSET_UD_AXIS 					: UINT:=1;
	NUM_OF_TESTING_AXIS 					: UINT:=3;
    NUM_OF_AXIS                             : UINT:=38;
	NUM_OF_TRACKS							: UINT:=9;//共有9個軌道(刀、前上線、前下線、後上線、後下線、吸風，機台橫移，壓線深淺、測試軌道)
	NUM_OF_AXISES_ON_TRACK 					: ARRAY [1..NUM_OF_TRACKS] OF UINT := 
											[NUM_OF_KNIFE_AXIS, NUM_OF_CRIMPING_AXIS, NUM_OF_CRIMPING_AXIS,
											 NUM_OF_CRIMPING_AXIS, NUM_OF_CRIMPING_AXIS, NUM_OF_SUCTION_AXIS,
											 NUM_OF_OFFSET_LR_AXIS, NUM_OF_OFFSET_UD_AXIS, NUM_OF_TESTING_AXIS];
	
	INDEX_OF_KNIFE_AXIS 					: UINT:=1;
	INDEX_OF_CRIMPING_AXIS_FU				: UINT:=INDEX_OF_KNIFE_AXIS+NUM_OF_KNIFE_AXIS;
	INDEX_OF_CRIMPING_AXIS_FD				: UINT:=INDEX_OF_CRIMPING_AXIS_FU+NUM_OF_CRIMPING_AXIS;
	INDEX_OF_CRIMPING_AXIS_BU				: UINT:=INDEX_OF_CRIMPING_AXIS_FD+NUM_OF_CRIMPING_AXIS;
	INDEX_OF_CRIMPING_AXIS_BD				: UINT:=INDEX_OF_CRIMPING_AXIS_BU+NUM_OF_CRIMPING_AXIS;
	INDEX_OF_SUCTION_AXIS					: UINT:=INDEX_OF_CRIMPING_AXIS_BD+NUM_OF_CRIMPING_AXIS;
	INDEX_OF_OFFSET_UD_AXIS					: UINT:=INDEX_OF_SUCTION_AXIS+NUM_OF_SUCTION_AXIS;
	INDEX_OF_OFFSET_LR_AXIS					: UINT:=INDEX_OF_OFFSET_UD_AXIS+NUM_OF_OFFSET_LR_AXIS;
	INDEX_OF_TESTING_AXIS					: UINT:=INDEX_OF_OFFSET_LR_AXIS+NUM_OF_OFFSET_UD_AXIS;
	INDEX_OF_AXISES_ON_TRACK 				: ARRAY [1..NUM_OF_TRACKS] OF UINT := 
											[INDEX_OF_KNIFE_AXIS, INDEX_OF_CRIMPING_AXIS_FU, INDEX_OF_CRIMPING_AXIS_FD,
											 INDEX_OF_CRIMPING_AXIS_BU, INDEX_OF_CRIMPING_AXIS_BD, INDEX_OF_SUCTION_AXIS,
											 INDEX_OF_OFFSET_UD_AXIS, INDEX_OF_OFFSET_LR_AXIS, INDEX_OF_TESTING_AXIS];

